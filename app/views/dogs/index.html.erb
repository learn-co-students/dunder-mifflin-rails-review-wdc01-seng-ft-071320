<h1>Dogs</h1>

<%= form_tag dogs_path, method: :get do %>
    <%= radio_button_tag "order_asc", "true" %>
    <%= label_tag "order_asc_true", "Order by Asc" %>
    <%= radio_button_tag "order_asc", "false" %>
    <%= label_tag "order_asc_false", "Order by Desc" %>
    <%= submit_tag "Sort Dogs" %>
<% end %>


<ul>
    <% @dogs.each do |dog| %>
        <li><%= link_to dog.name, dog_path(dog.id) %></li>
    <%end%>
</ul>
